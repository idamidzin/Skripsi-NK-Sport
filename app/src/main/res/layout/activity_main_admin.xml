<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_admin"
    tools:context="com.idam.idam_tech.activities.admin.MainAdminActivity">



        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:src="@drawable/icon_people_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txthallo"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello Admin"/>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_scanner"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_bg"
                    android:layout_marginHorizontal="50dp"
                    android:textColor="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_qrcode2"
                    android:drawableRight="@drawable/ic_keyboard2_arrow_right_black_24dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="35dp"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCANNER NOW"/>

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_bg"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="20dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"/>


            </LinearLayout>

        </LinearLayout>


</RelativeLayout>
