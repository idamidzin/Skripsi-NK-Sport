<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/card_list_notif"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:id="@+id/card_view"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/box_notif"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_nksport"
                    android:textSize="12dp"
                    android:text="NK-SPORT CENTER"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tanggal_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 Mei 2020"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/box_histori"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/nama_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="NK-SPORT CENTER"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/deskripsi_notif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Pembelian Paket"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>