<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:theme="@style/AppThemeLogin"
android:background="@drawable/gym_login"
tools:context="com.idam.idam_tech.activities.auth.LoginAdminActivity">

<EditText
    android:id="@+id/txtUsername"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginHorizontal="30dp"
    android:background="@drawable/round_border"
    android:drawableStart="@drawable/person"
    android:drawablePadding="16dp"
    android:ems="10"
    android:hint="Email"
    android:text="idamidzin@gmail.com"
    android:inputType="text"
    android:padding="16dp"
    android:textColor="@color/colorWhite"
    android:textColorHint="#FF9800"
    tools:ignore="MissingConstraints" />

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/materialpass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtUsername"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="10dp"
    android:textColorHint="#FF9800"
    app:hintEnabled="false"
    app:layout_constraintBottom_toTopOf="@+id/btn_login"
    app:layout_constraintTop_toBottomOf="@+id/txtUsername"
    app:passwordToggleEnabled="true"
    app:passwordToggleTint="#FF9800">

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Password"
        android:text="123456789"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="#FF9800" />

</com.google.android.material.textfield.TextInputLayout>

<Button
    android:id="@+id/btn_login"
    android:layout_width="200dp"
    android:layout_height="53dp"
    android:background="@drawable/round_bg"
    android:drawableEnd="@drawable/send"
    android:paddingEnd="18dp"
    android:text="Login"
    android:textColor="@color/colorWhite"
    android:textStyle="bold"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/materialpass"
    android:layout_alignParentRight="true"
    android:layout_marginHorizontal="30dp"
    tools:ignore="MissingConstraints" />

<TextView
    android:id="@+id/link_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Administrator NK Sport Center Kuningan"
    android:textColor="#FF9800"
    android:textStyle="bold"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"/>

<ImageView
    android:id="@+id/logo"
    android:layout_width="113dp"
    android:layout_height="98dp"
    app:srcCompat="@drawable/nksport2020"
    android:layout_above="@id/nksport"
    android:layout_centerHorizontal="true"
    />

<TextView
    android:id="@+id/nksport"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorWhite"
    android:layout_above="@id/txtUsername"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="30dp"
    android:text="WELCOME TO LOGIN ADMIN"/>

</RelativeLayout>
